<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.wansu.cardview.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/mundo_da_jully">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_main"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation"
        android:layout_height="150dp"
        android:layout_width="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/plant"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="1dp"
                android:background="@drawable/corona_snapdragon"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plant_name"
                android:layout_toRightOf="@+id/plant"
                android:layout_alignParentTop="true"
                android:textSize="16sp"
                android:text="Corona Snapdragon"
                android:padding="12dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/explain"
                android:layout_toRightOf="@+id/plant"
                android:layout_below="@+id/plant_name"
                android:textSize="12sp"
                android:text="5 seed"
                android:padding="12dp"
                android:textColor="@android:color/darker_gray" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
